{{!-- sidebarItem.hbs --}}
{{#if (eq type "directory")}}
    <li class="folder">
        <span>{{name}}</span>
        <ul>
            {{#each children}}
                {{> sidebarItem this}}
            {{/each}}
        </ul>
    </li>
{{else if (eq type "file")}}
    <li class="file"><a href="{{#if @root.baseUrl}}{{@root.baseUrl}}/{{htmlPath path}}{{else}}/{{htmlPath path}}{{/if}}">{{name}}</a></li>
{{/if}}
